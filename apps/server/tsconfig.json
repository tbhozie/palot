{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["bun"]
	},
	"include": ["src"]
}
