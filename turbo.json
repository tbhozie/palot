{
	"$schema": "https://turborepo.dev/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"dev:web": {
			"persistent": true,
			"cache": false
		},
		"dev:wayland": {
			"persistent": true,
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"build:types": {
			"dependsOn": ["^build:types"],
			"outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
		},
		"check-types": {
			"dependsOn": ["^build:types"]
		},
		"package": {
			"dependsOn": ["build"],
			"outputs": ["release/**"],
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
